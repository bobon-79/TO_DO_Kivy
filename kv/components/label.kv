#:kivy 2.3.1
#:import dp kivy.metrics.dp
#:import get_color_from_hex kivy.utils.get_color_from_hex
<TitleLabel@BoxLayout>:
    text: str()
    img: str()
    color: ""

    orientation: "horizontal"
    spacing: dp(1)
    canvas.before:
        Color:
            rgba:  get_color_from_hex(root.color)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [25,]
    Label:
        font_name: "MDI"
        size_hint_x: .1
        text:  root.img
        font_size: app.font_size["title"]


    Label:
        id: ""
        text: root.text
        size_hint_x: .9
        font_name:  "UI"
        bold: True
        font_size: app.font_size["title"]
        color:  1, 1, 1, 1