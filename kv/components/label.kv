#:kivy 2.3.1
#:import dp kivy.metrics.dp
#:import get_color_from_hex kivy.utils.get_color_from_hex
<TitleLabel@BoxLayout>:
    text: str()
    img: str()

    orientation: "horizontal"
    spacing: dp(1)
    canvas.before:
        Color:
            rgba: app.colors["primary"]
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [25,]
    Label:
        font_name: "MDI"
        padding: dp(10), 0, 0, 0
        color: app.colors["on_primary"]
        size_hint_x: .1
        text:  root.img
        font_size: app.font_sizes["title"]
        canvas.before:
            Color:
                rgba: app.colors["primary_dark"]
            Ellipse:
                pos: self.center_x - dp(15), self.center_y - dp(22)
                size: 


    Label:
        id: ""
        text: root.text
        size_hint_x: .9
        font_name:  "UI"
        bold: True
        font_size: app.font_sizes["title"]
        color: app.colors["on_primary"]